<h1>
    SEARCH TEMPLATE
</h1>


{% if search.performed %}
    <h1> here's your results</h1>
    {% for result in search.results %}
        <p>{{ result.object_type }}</p>


        {% if result.object_type == "page" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
        {% elsif result.object_type == "article" %}
            <a href="{{ result.url }}">{{ result.title }}</a>
        {% else %}
            <a href="{{ result.url }}">{{ result.title }}</a>
        {% endif %}

    {% endfor %}

{% else %}
    <h1>Try search for something</h1>
{% endif %}
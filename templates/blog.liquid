



{% paginate blog.articles by 4 %}

<h1> blog template
    {{ blog.title }}
</h1>



{% for article in blog.articles %}
    <div>
        <a href="{{ article.url }}">
            title
            <h2>{{ article.title }}</h2>
            author <p>{{ article.author }}</p>

            excerpt
            <div>{{ article.excerpt }}</div>


        </a>
    </div>
{% endfor %}

{% endpaginate %}
